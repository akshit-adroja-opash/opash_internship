{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",          // Better for modern Node projects
    "moduleResolution": "NodeNext", // Ensures TypeScript finds imports correctly
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true    // You can actually turn this back on now!
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}