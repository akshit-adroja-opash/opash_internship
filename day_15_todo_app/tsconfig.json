{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["ES2018", "DOM"],
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
}
